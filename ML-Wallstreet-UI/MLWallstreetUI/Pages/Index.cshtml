@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
@using MLWallstreetUI.Data.Enums;

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<div>
    <h2>Management</h2>
    <form method="post">
        <div class="form-row">
            <div class="form-group col-sm-3">
                <label for="apiSelect">Search API</label>
                <select id="apiSelect" class="custom-select" asp-for="DataRetrievalModelBinding.ApiType" asp-items="Html.GetEnumSelectList<DataRetrievalSearchApiType>()">
                </select>
            </div>
            <div class="form-group col-sm-3">
                <label for="searchQueryTextbox">Search Query</label>
                <input id="searchQueryTextbox" type="text" class="form-control" asp-for="DataRetrievalModelBinding.SearchQuery" />
            </div>
            <div class="form-group col-sm-2">
                <label for="startDateTextbox">Start Date</label>
                <input id="startDateTextbox" type="date" class="form-control" asp-for="DataRetrievalModelBinding.StartDate" />
            </div>
            <div class="form-group col-sm-2">
                <label for="endDateTextbox">End Date</label>
                <input id="endDateTextbox" type="date" class="form-control" asp-for="DataRetrievalModelBinding.EndDate" />
            </div>
            <div class="form-group col-sm-2">
                <label for="numberOfResultsText">Number of Results</label>
                <input id="numberOfResultsText" type="number" class="form-control" asp-for="DataRetrievalModelBinding.PageSize" value="10" />
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Retrieve</button>
    </form>
    <hr />
</div>
